<p id="notice"><%= notice %></p>

<h1>Texts</h1>

<p>
  <%= link_to 'Upload', new_text_image_path %>
</p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @text_images.each do |text_image| %>
      <tr>
        <td><%= truncate(text_image.content, length: 100) %></td>
        <td><%= link_to 'Show', text_image %></td>
        <td><%= link_to 'Edit', edit_text_image_path(text_image) %></td>
        <td><%= link_to 'Destroy', text_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

